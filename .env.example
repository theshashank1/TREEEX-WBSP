# =============================================================================
# TREEEX-WBSP Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Required: Full connection URL
DATABASE_URL=postgresql://user:password@host:5432/database

# Optional: Individual components
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your_publishable_key
SUPABASE_SECRET_KEY=your_secret_key

# -----------------------------------------------------------------------------
# Meta WhatsApp
# -----------------------------------------------------------------------------
META_GRAPH_API_URL=https://graph.facebook.com/
META_API_VERSION=v22.0
META_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
META_ACCESS_TOKEN=your_system_user_access_token

# -----------------------------------------------------------------------------
# Azure Blob Storage
# -----------------------------------------------------------------------------
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_ACCOUNT_NAME=your_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_account_key
AZURE_STORAGE_CONTAINER_NAME=images

# -----------------------------------------------------------------------------
# Cloudflare R2 (S3 Compatible)
# -----------------------------------------------------------------------------
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=whatsapp-media
R2_PUBLIC_URL=https://your-bucket.r2.dev

# -----------------------------------------------------------------------------
# Ngrok (Tunneling)
# -----------------------------------------------------------------------------
# Get your authtoken from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_authtoken
# Optional: Static Domain (requires paid plan)
NGROK_DOMAIN=your-static-domain.ngrok-free.app
# Optional: Edge Label
NGROK_EDGE=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_MESSAGES_PER_SECOND=10

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
SENTRY_DSN=
